<% layout('layouts/boilerplate')%>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campground</a>
    </div>

    <% for (let camp of allCamps) { %>

        <div class="card mb-1">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=camp.image%>" class="card-img-top img-fluid" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%=camp.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-secondary">
                                <%=camp.location%>
                            </small>

                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%></a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>