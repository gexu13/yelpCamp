<% layout('layouts/boilerplate')%>

    <div id="cluster-map" style="width: 100%; height: 500px"></div>

    <h1 class="my-3">All Campgrounds</h1>

    <% for (let camp of allCamps) { %>

        <div class="card mb-2">
            <div class="row">
                <div class="col-md-4">
                    <% if (camp.images[0]) { %>
                    <img src="<%=camp.images[0].url%>" class="card-img-top img-fluid" alt="...">
                    <% } else { %>
                        <img src="https://res.cloudinary.com/daigovpbf/image/upload/v1734635086/YelpCamp/hh9vm4njzv20omt6otjb.jpg" class="card-img-top img-fluid" alt="...">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%=camp.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-secondary">
                                <%=camp.location%>
                            </small>

                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <script>
        const mapToken = '<%-process.env.maptiler_apiKey%>';
        const campgrounds = {features: <%-JSON.stringify(allCamps)%>};
    </script>
    <script src="/js/clusterMap.js"></script>